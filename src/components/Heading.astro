---
import clsx from "clsx";

const { as: Comp = "h1", size = "lg", className, ...props } = Astro.props;
---

<Comp
  class={clsx(
    "font-bold leading-tight tracking-light font-display text-slate-700",
    size === "xl" && "text-5xl md:text-7xl",
    size === "lg" && "text-4xl md:text-5xl",
    size === "md" && "text-3xl md:text-4xl",
    size === "sm" && "text-2xl md:text-3xl",
    className
  )}
  {...props}
>
  <slot />
</Comp>
