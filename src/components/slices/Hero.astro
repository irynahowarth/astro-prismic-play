---
import Bounded from "../Bounded.astro";
import Button from "../Button.astro";
import PrismicHtml from "../PrismicHtml.astro";
import PrismicImage from "../PrismicImage.astro";

const { primary } = Astro.props;
---

<Bounded as="section">
  <div class="grid grid-cols-1 place-items-center text-center">
    <PrismicHtml content={primary.heading} />
    <PrismicHtml content={primary.body1} />
    <Button field={primary.button_link} className={"mb-8 md:mb-10"}>
      {primary.button_text}
    </Button>
    <PrismicImage
      content={primary.image}
      className="drop-shadow-xl max-w-4xl w-full"
    />
  </div>
</Bounded>
