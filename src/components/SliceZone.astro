---
import Features from "./slices/Features.astro";
import Hero from "./slices/Hero.astro";
import Testimonials from "./slices/Testimonials.astro";
import TextWithImage from "./slices/TextWithImage.astro";

const { slices } = Astro.props;
---

{
  slices.map((slice) => {
    switch (slice.slice_type) {
      case "hero": {
        return <Hero {...slice} />;
      }
      case "features": {
        return <Features {...slice} />;
      }
      case "testimonials": {
        return <Testimonials {...slice} />;
      }
      case "textwithimage": {
        return <TextWithImage {...slice} />;
      }
    }
  })
}
