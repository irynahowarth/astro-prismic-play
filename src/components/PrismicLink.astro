---
import * as prismic from "@prismicio/client";

const { link, label } = Astro.props;

const url = prismic.asLink(link);
---

<a
  href={url}
  class="block w-fit bg-cyan-700 hover:bg-cyan-800 transition-colors duration-200 ease-in-out py-3 px-12 rounded-full text-white font-display font-bold text-base tracking-wider"
  >{label}</a
>
