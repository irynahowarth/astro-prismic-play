---
import PrismicText from "@/components/PrismicText.astro";
import MainLayout from "../layouts/MainLayout.astro";

import { client } from "@/prismic";
import SliceZone from "@/components/SliceZone.astro";

const { data } = await client.getSingle("homepage");
---

<MainLayout>
  <h1><PrismicText content={data.page_title} /></h1>
  <SliceZone slices={data.body} />
</MainLayout>
